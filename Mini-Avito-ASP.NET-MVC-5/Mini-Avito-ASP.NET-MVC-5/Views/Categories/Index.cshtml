@model IEnumerable<Mini_Avito_ASP.NET_MVC_5.Models.Category>

@{
    ViewBag.Title = "catégorie";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Liste des types d'emplois</h2>

<p>
    @Html.ActionLink("Créer une nouvelle catégorie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categoryDescription)
        </td>
        <td>
            @Html.ActionLink("Éditer", "Edit", new { id=item.id }) |
            @Html.ActionLink("Détails", "Details", new { id=item.id }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
