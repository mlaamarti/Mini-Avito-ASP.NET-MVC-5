@model IEnumerable<Mini_Avito_ASP.NET_MVC_5.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1>Album example</h1>
        <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Main call to action</a>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
    </div>
</section>

@foreach (var item in Model)
{
    <h3 style="text-transform:capitalize" class="pb-4 mb-4 font-italic border-bottom">
        @Html.DisplayFor(modelItem => item.categoryName) <br />
        <span style="font-size:14px">@Html.DisplayFor(modelItem => item.categoryDescription)</span>
    </h3>

    <div class="row mb-2">
        @foreach (var subItem in item.jobs)
        {
            <div class="col-md-6">
                <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative" style="height:300px">
                    <div class="col p-4 d-flex flex-column position-static">
                        <strong class="d-inline-block mb-2 text-primary">@Html.DisplayFor(modelItem => item.categoryName)</strong>
                        <h3 class="mb-0">@Html.DisplayFor(modelItem => subItem.jobTitle)</h3>
                        <p class="card-text mb-auto">@Html.DisplayFor(modelItem => subItem.jobContent)</p>
                        <a href="/Jobs/Details/@Html.DisplayFor(modelItem => subItem.id)" class="stretched-link">continuer la lecture</a>
                    </div>
                    <div class="col-auto d-none d-lg-block">
                        <img  src="~/Uploads/@Html.DisplayFor(modelItem => subItem.jobImage)" class="bd-placeholder-img" width="200" height="250" />
                    </div>
                </div>
            </div>
        }
    </div>

}

